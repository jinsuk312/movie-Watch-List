<h1>Movies to Watch</h1>

<ul>
    <!-- loop through movies object, for each movie in the object its going to create a list item with the id of the movie and the title -->
    {{#each movies}}
    <li>
        <p>{{this.id}}. {{this.movie}}</p>
        <form action="/delete?_method=DElETE" method="POST">
            <input type="hidden" name="id" value="{{this.id}}">
            <button type="submit">DELETE</button>
        </form>
    </li>
    {{/each}}
</ul>

<h2>Add A Movie to Watch</h2>
