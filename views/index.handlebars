<form method="POST" action="/create">
    <textarea type="text" name="movie"></textarea>
    <button type="submit">SAVE MOVIE</button>
</form>

<h2>Update a Movie</h2>
<!-- action "" is how we use the PUT method in html -->
<form method="POST" action="/update?_method=PUT">
    <input type="text" name="id" placeholder="id">
    <textarea type="text" name="movie" placeholders="What do you want to update this movie to?"></textarea>
    <button type="submit">UPDATE MOVIE</button>
</form>